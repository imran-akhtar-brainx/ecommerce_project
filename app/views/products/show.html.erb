<% count = 1 %>
<div class="d-flex justify-content-center">
  <div class="card" style="width: 18rem;" data-controller="cart" data-cart-count-value="<%= count %>"  data-cart-product-value="<%= @product %>">
    <%= image_tag "shoe.webp", class: "card-img-top" %>
    <div class="card-body">
      <h3 class="card-title"><%= @product.name %></h3>
      <%= form_for @line_item, remote: true do |f| %>
        <p class="card-text"> Unit Price: <%= number_to_currency @product.price %></p>
        <div class="input-group mb-3">
          <%= f.number_field :quantity, value: 1, class: "form-control", min: 1  %>
          <div class="input-group-append">
            <%= f.hidden_field :product_id, value: @product.id %>
            <%= f.submit "Add to Cart", class: "btn btn-outline-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
