<div class="d-flex justify-content-start">
  <% products.each do |product| %>
    <div class="card">
      <div class="product-img-wrapper">
        <% if product.images.first.representable? %>
          <%= image_tag product.images.first, class: "card-img-top product-img" %>
        <% end %>
      </div>
      <div class="card-body">
        <h5 class="card-title"><%= product.name.titleize %></h5>
        <p class="card-text"><%= product.price %></p>
        <% if params[:controller] == "orders" %>
          <p class="card-text"><%= product.description %></p>
        <% else %>
          <button data-action='cart#addToCart' class="btn btn-primary" data-product-id="<%= product.id %>" data-product-name="<%= product.name %>" data-product-price="<%= product.price %>">Add
            to cart
          </button>
        <% end %>
      </div>
    </div>
  <% end %>
</div>